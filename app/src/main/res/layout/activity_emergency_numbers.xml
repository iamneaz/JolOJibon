<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_emergency_numbers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.fuhad.jonojog.EmergencyNumbers"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dhaka North City Corp."
            android:textSize="30sp"
            android:textAlignment="center"
            android:id="@+id/tv1"/>

        <Button
            android:layout_below="@+id/tv1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/emergencynumber"
            android:id="@+id/b1"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dhaka South City Corp."
            android:textSize="30sp"
            android:textAlignment="center"
            android:id="@+id/tv2"
            android:layout_below="@id/b1"/>

        <Button
            android:layout_below="@id/tv2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/emergencynumber"
            android:layout_centerHorizontal="true"
            android:id="@+id/b2"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dhaka WASA"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_below="@+id/b2"/>

        <Button
            android:id="@+id/b3"
            android:layout_below="@+id/tv3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/emergencynumber"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"

            />
        <TextView
            android:id="@+id/tv4"
            android:layout_below="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fire Brigade"
            android:textSize="30sp"
            android:textAlignment="center"
            android:gravity="center"

            />

        <Button
            android:id="@+id/b4"
            android:layout_below="@+id/tv4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/emergencynumber"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            />

    </RelativeLayout>

</ScrollView>
